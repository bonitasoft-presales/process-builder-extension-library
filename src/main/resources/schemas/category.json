{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bonitasoft-process-builder.com/users.schema.json",
  "title": "Users",
  "description": "Schema for defining initial process configuration users.",
  "type": "object",
  "properties": {
    "optionTypeInput": { 
      "$ref": "#/$defs/ObjectOptionTypeSchema"
    },
    "actionTypeInput": { 
      "$ref": "#/$defs/ActionTypeSchema"
    },      
    "objectInput": {
        "type": "object",
        "allOf": [
            { "$ref": "common_elements.json#/$defs/ObjectInputBaseSchema" },
            {
                "properties": {
                    "fullName": {
                        "type": "string"
                    },
                    "fullDescription": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "fullName",
                    "fullDescription",
                    "enabled"
                ]
            }
        ],
        "additionalProperties": false 
    }
  },
  "required": [
    "optionTypeInput",
    "actionTypeInput",
    "objectInput"
  ]
}