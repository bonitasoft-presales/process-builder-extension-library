{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "parameter.schema.json",
  "title": "Parameter",
  "description": "Schema for defining initial process configuration parameters.",
  "type": "object",
  "allOf": [
    { "$ref": "/schemas/common_elements.json#/$defs/ObjectInputBaseSchema" },
    {
        "properties": {
            "fullName": { "type": "string" },
            "version": { "type": "string" },
            "fullDescription": { "type": "string" },
            "token": { "type": "string" },
            "displayName": { "type": "string" },
            "cancellationDelay": { "type": "integer" },
            "documentsFolder": { "type": "string" },
            "criticality": { "type": "string" },
            "category": {
              "type": "object",
              "properties": {
                "persistenceId_string": { "type": "string" }
              },
              "required": [ "persistenceId_string" ]
            }
          },
          "required": [
            "persistenceId_string",
            "fullName",
            "version",
            "fullDescription",
            "token",
            "displayName",
            "cancellationDelay",
            "documentsFolder",
            "criticality",
            "category"
          ]
      }
    ],
    "additionalProperties": false 
}
  