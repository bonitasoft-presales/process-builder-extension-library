{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bonitasoft-process-builder.com/steps.schema.json",
  "title": "Steps",
  "description": "Schema for updating process steps configuration.",
  "type": "object",
  "properties": {
    "optionTypeInput": { 
      "$ref": "#/$defs/ProcessOptionTypeSchema",
      "const": "PARAMETER"
    },
    "actionTypeInput": { 
      "$ref": "#/$defs/ActionTypeSchema",
      "const": "UPDATE"
    },    
    "processInput": {
        "type": "object",
        "allOf": [
            { "$ref": "common_elements.json#/$defs/ObjectInputBaseSchema" },
            {
                "properties": {
                    "steps": {
                        "type": "array",
                        "description": "Array containing all process steps.",
                        "items": { 
                            "$ref": "common_elements.json#/$defs/StepSchema" 
                        }
                    }
                },
                "required": [
                    "steps" 
                ]
            }
        ],
        "additionalProperties": false 
    }
  },
  "required": [
    "optionTypeInput",
    "actionTypeInput",
    "processInput"
  ],
  "additionalProperties": false
}